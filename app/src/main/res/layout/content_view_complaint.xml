<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:orientation="vertical"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    tools:showIn="@layout/activity_view_complaint">
    <ScrollView
        android:layout_above="@+id/tvUpdate"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/ivComplaint"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="8dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:textSize="16sp"
                android:text="Complaint"
                android:textColor="@color/bg_register"/>
            <EditText
                android:id="@+id/tvComplaint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text ="Too much mess"
                android:textColor="@color/input_register"
                android:enabled="false"
                android:paddingTop="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:textSize="16sp"
                android:text="Area"
                android:textColor="@color/bg_register"/>
            <EditText
                android:id="@+id/tvArea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text ="Area"
                android:textColor="@color/input_register"
                android:enabled="false"
                android:paddingTop="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:textSize="16sp"
                android:text="Complaint Status"
                android:textColor="@color/bg_register"/>
            <EditText
                android:id="@+id/etStatus"
                android:enabled="false"
                android:textColor="@color/input_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:textSize="16sp"
                android:text="Officer ID"
                android:textColor="@color/bg_register"/>
            <EditText
                android:id="@+id/etOfficer"
                android:editable="false"
                android:text="--"
                android:textColor="@color/input_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"/>
        </LinearLayout>
    </ScrollView>
    <TextView
        android:id="@+id/tvUpdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/update"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:padding="10dp"
        android:visibility="gone"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary"/>

</RelativeLayout>